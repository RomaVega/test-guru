<h2>Edit Answer</h2>
<%= render "shared/errors", object: answer %>
<%= form_with model: answer, local: true do |f| %>
  <div class="field">
    <%= f.text_area :body, rows: 3 %>
  </div>
  <div class="field">
    <%= f.check_box :correct %>
    <%= f.label :correct, "Correct?" %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
