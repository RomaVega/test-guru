<h1> New test </h1>

<%= form_with model: @test, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :level %><br>
    <%= form.number_field :level %>
  </div>

  <div>
    <%= form.label :category_id, "Category" %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title %>
  </div>

  <div>
    <%= form.submit "Create Test" %>
  </div>
<% end %>
<%= link_to 'Back', tests_path %>
<%= link_to 'Create New Question', new_test_question_path(@test) if @test.persisted? %>
