<%= form_with model: (question.persisted? ? question : [test, question]), local: true do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Enter question here" %>
  </div>

  <div class="actions">
    <%= f.submit question.persisted? ? "Update Question" : "Create Question" %>
  </div>
<% end %>
